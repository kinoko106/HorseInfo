<Page x:Class="HorseInfo.PatternRaceListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HorseInfo"
      mc:Ignorable="d" 
      d:DesignHeight="{Binding Width}" 
      d:DesignWidth="{Binding Height}"
      Width="{Binding Width}"
      Height="{Binding Height}"
      Title="PatternRaceListPage">
    <Page.DataContext>
        <local:PatternRaceListPageViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="重賞レース一覧"/>
        <DataGrid 
            Grid.Row="1" 
            Margin="20,20,0,0"
            ItemsSource="{Binding PatternRaces}"
        />
    </Grid>
</Page>
